    curl -k "https://pro.dbflex.net/secure/api/v2/15331/25ABDEE3357D416283C0D66B9C872076/Web%20Japan%20Contact%20and%20App/API%20List%20for%20CSV/select.csv" -o /Users/rcogley/dev/eSolia_2018/static/eSolia-Japan-Emergency-Contacts.en.csv
