# function to run hugo server

function hugoserver-esolia {
    hugogetjson-esolia
    cd /Users/rcogley/dev/eSolia_2018
    hugo server --navigateToChanged --buildDrafts --buildFuture --watch --verbose --source="/Users/rcogley/dev/eSolia_2018" --config="/Users/rcogley/dev/eSolia_2018/config.toml" --port=1366
}

function hugoserver-esoliacom {
